@page
@model FeedbackWebApp.Pages.OverviewModel
@{
    ViewData["Title"] = "Overview";
    bool verfied = true;
    HttpRequests req = new HttpRequests();
    Model.places = await req.GetPlacesAsync(1);
}

<h1>Overview</h1>
<div class="container">
    @if (verfied == true)
    {
        <div style="height:40px">
            <button id="btnAddPlace" onclick="AddPlace()" style="border: none;color: white;padding: 6px 20px;text-align: center;margin-bottom: 10px;float: right;
         background-color: #555555;cursor: pointer;margin-left:3px">
                Add Place
            </button>
            <button id="btnAddPlace" onclick="AddPlaceType()" style="border: none;color: white;padding: 6px 20px;text-align: center;margin-bottom: 10px;float: right;
         background-color: #555555;cursor: pointer;">
                Add PlaceType
            </button>

        </div>
    }

    @foreach (Place p in Model.places)
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <img src="https://via.placeholder.com/180" alt="Bild" style="float: left" />
                <div style="float:left; margin-left: 5%">
                    <a onclick="" asp-page="/PlaceSite" id="@p.ID"><h3>@p.Name</h3></a>
                    <h4> @p.PlaceType.Name</h4>
                    @if (p.OpeningTimes.Count != 0)
                    {
                        <p>Opening time:  @p.OpeningTimes[0].Day , opens at @p.OpeningTimes[0].Open, closes at @p.OpeningTimes[0].Close</p>
                    }
                    <p>address: @p.Street, @p.ZipCode @p.City , @p.Country</p>
                    <a href="#">See on Google Maps</a>
                </div>
                <div class="rating" style="float:right; margin-right: 5%; margin-top: 2%; text-align: right">
                    @{
                        int r = Convert.ToInt32(p.Rating);
                    }
                    @for (int i = 0; i < r; i++)
                    {
                        <span class="glyphicon glyphicon-star iStar"></span>
                    }
                    @for (int j = 0; j < 5 - r; j++)
                    {
                        <span class="glyphicon glyphicon-star-empty iStar"></span>
                    }
                    <p>User rating: @p.Rating / 5</p>
                </div>
            </div>
        </div>
    }
    <div class="pagination">
        <a href="#">&laquo;</a>
        <a class="active"href="#">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#">4</a>
        <a href="#">5</a>
        <a href="#">6</a>
        <a href="#">&raquo;</a>
</div>
</div>

