@page
@model FeedbackWebApp.Pages.PlaceSiteModel
@{

    HttpRequests req = new HttpRequests();
    Place place = await req.GetPlaceAsync(16);
    //string r = await req.GetPlaceAsync(4);
    ViewData["Title"] = place.Name;
    List<Review> reviews = new List<Review>();
    reviews = await req.GetReviews(16);
    bool isVerfied = true;
}

<div class="container">
    <div style="margin-top:10px">
        @* <img src="https://via.placeholder.com/600x390" alt="Bild" style="" /> *@
        <div style="">
            <h3>@place.Name</h3>
            <h4>@place.PlaceType.Name</h4>
            <p>Opening times: </p>
            @foreach (openingTimes o in place.OpeningTimes)
            {
                @switch (o.Day)
                {
                    case 0:
                        <p>Monday: open from @o.Open  to @o.Close</p>
                        break;
                    case 1:
                        <p>Tuesday: open from @o.Open  to @o.Close</p>
                        break;
                    case 2:
                        <p>Wednesday: open from @o.Open  to @o.Close</p>
                        break;
                    case 3:
                        <p>Thursday: open from @o.Open  to @o.Close</p>
                        break;
                    case 4:
                        <p>Friday: open from @o.Open  to @o.Close</p>
                        break;
                    case 5:
                        <p>Saturday: open from @o.Open  to @o.Close</p>
                        break;
                    case 6:
                        <p>Sunday: open from @o.Open  to @o.Close</p>
                        break;
                }
            }
            <p>Address: @place.Street, @place.ZipCode @place.City , @place.Country</p>

            @if (isVerfied)
            {
                <button id="btnAddPlace" onclick="AddReview()" style="border: none;color: white;padding: 6px 20px;text-align: center;margin-bottom: 10px;float: right;
                background-color: #555555;cursor: pointer;margin-top: 10px">
                    Add Review
                </button>
            }

            <h3>Reviews: </h3>
            @foreach (Review r in reviews)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p><b>@r.User.Username</b> gives this @place.PlaceType.Name <b>@r.Rating stars</b> and says: </p>
                        <br />
                        <b>@r.Text</b>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

