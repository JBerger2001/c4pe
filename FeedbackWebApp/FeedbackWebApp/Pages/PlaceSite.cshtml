    HttpRequests req = new HttpRequests();
    Place place = await req.GetPlaceAsync(4);
    //string r = await req.GetPlaceAsync(4);
    ViewData["Title"] = place.Name;

}

<div class="container">
    <div style="margin-top:10px">
        <img src="https://via.placeholder.com/300x200" alt="Bild" style="" />
        <div style="">
            <h3>@place.Name</h3>
            <h4>@place.PlaceType.Name</h4>
            <p>Opening times: </p>
            @foreach (openingTimes o in place.OpeningTimes)
            {
                @switch (o.Day)
                {
                    case 0:
                        <p>Monday: open from @o.Open  to @o.Close</p>
                        break;
                    case 1:
                        <p>Tuesday: open from @o.Open  to @o.Close</p>
                        break;
                    case 2:
                        <p>Wednesday: open from @o.Open  to @o.Close</p>
                        break;
                    case 3:
                        <p>Thursday: open from @o.Open  to @o.Close</p>
                        break;
                    case 4:
                        <p>Friday: open from @o.Open  to @o.Close</p>
                        break;
                    case 5:
                        <p>Saturday: open from @o.Open  to @o.Close</p>
                        break;
                    case 6:
                        <p>Sunday: open from @o.Open  to @o.Close</p>
                        break;
                }
            }
            <p>Address: </p>

        </div>
    </div>
</div>

