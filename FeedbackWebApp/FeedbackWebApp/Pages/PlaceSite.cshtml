    HttpRequests req = new HttpRequests();
    Place place = await req.GetPlaceAsync(2);
    ViewData["Title"] = @place.Name;
    
}

<div class="container">
    <div>
        <img src="https://via.placeholder.com/300x200" alt="Bild" style="float: left" />
        <div style="margin-left: 50px">
            <h3>@place.Name</h3>
            <h4>@place.PlaceType.Name</h4>
            <p>Opening times: </p>
            @foreach(openingTimes o in place.OpeningTimes)
            {
                <p>@o.day: open from @o.open  to @o.close</p>
            }
            <p>Address: @place.Address</p>
        </div>
    </div>
</div>

