@page
@model FeedbackWebApp.Pages.AddPlaceModel
@{
    ViewData["Title"] = "Add new Place";
    HttpRequests req = new HttpRequests();
    List<PlaceType> types = await req.GetPlaceTypesAsync();
    List<string> days = new List<string>() { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
}
<div class="loginDiv">
    <h2>Add new Place</h2>
    <form method="POST">
        <label class="labelMargin">Name of the place: </label>
        <br />
        <input class="textBLogin" type="text" name="placeName" value="" />
        <br />
        <label class="labelMargin">Street & Number: </label>
        <br />
        <input class="textBLogin" type="text" name="street" value="" />
        <br />
        <label class="labelMargin">ZipCode: </label>
        <br />
        <input class="textBLogin" type="text" name="zipCode" value="" />
        <br />
        <label class="labelMargin">City: </label>
        <br />
        <input class="textBLogin" type="text" name="city" value="" />
        <br />
        <label class="labelMargin">Country: </label>
        <br />
        <input class="textBLogin" type="text" name="country" value="" />
        <br />
        <label class="labelMargin">Type of place: </label>
        <select class="textBLogin" name="placetypes">
            @foreach (PlaceType t in types)
            {
                <option name="@t.Id">@t.Name</option>
            }
        </select>
        <br />
        <label class="labelMargin">Opening Times: </label>
        <br />
        <div style="text-align:center">
            @for (int i = 0; i < days.Count; i++)
            {
                string opN = "Open" + i; string clN = "Close" + i;
                <label>@days[i]: </label>
                <div class="times">
                    <label>open: </label><input name=opN type="time" /> <label>close: </label><input name=clN type="time" />
                </div>
                <br />
            }
            <input type="submit" class="btnNewP" style="border: none;color: white;padding: 6px 20px;
            text-align: center;margin-top: 10px;background-color: #555555;cursor: pointer;margin-left:20px" asp-page-handler="" value="Create new place">
        </div>
    </form>

</div>


